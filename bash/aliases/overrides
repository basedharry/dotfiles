# Use NVIM instead of VIM if installed
if type nvim > /dev/null 2>&1; then
  alias vim='nvim'
fi

# Ensure full path is created
alias mkdir='mkdir -p'

# Ensure coloured output on ls
if [[ "${OSTYPE:0:6}" = "linux" ]] ; then
  alias ls='ls --color'
elif [[ "${OSTYPE:0:6}" = "darwin" ]] ; then
  alias ls='ls -G'
fi
